<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hello MyApplication!</title>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Black+Ops+One|Cabin+Sketch|Herr+Von+Muellerhoff" rel="stylesheet">

  </head>

  <body>
    <div class="container">

      <header class="header">
        <nav role="navigation">
          <ul class="nav nav-pills pull-right">
            <li><a href="http://www.phoenixframework.org/docs">Get Started</a></li>
          </ul>
        </nav>
        <span class="logo"></span>
      </header>

      <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
      <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>

      <nav id="sticky-nav">
        <main role="main">
          <%= render @view_module, @view_template, assigns %>
        </main>
      </nav>

      <h3>Font Awesome</h3>
      <ul class="fa-ul">
        <li><i class="fa-li fa fa-check-square"></i>List icons</li>
        <li><i class="fa-li fa fa-spinner fa-spin"></i>List icons</li>
        <li><i class="fa-li fa fa-square"></i>List icons</li>
      </ul>

      <h3>Google Fonts</h3>
      <p class="googleFontExample" id="cabinSketch">This is the Cabin Sketch font</p>
      <p class="googleFontExample" id="blackOpsOne">This is the Black Ops Onefont</p>
      <p class="googleFontExample" id="herrVonMuellerhoff">This is the Herr Von Muellerhoff font</p>

      <h3>Slider Pro</h3>
      <div class="slider-pro" id="my-slider">
        <div class="sp-slides">
            <!-- Slide 1 -->
            <div class="sp-slide">
                <img class="sp-image" src="<%= static_path(@conn, "/images/band_01.JPG") %>">/>
                <p class="sp-caption">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </div>
            
            <!-- Slide 2 -->
            <div class="sp-slide">
                <p>Lorem ipsum dolor sit amet</p>
                <img class="sp-image" src="<%= static_path(@conn, "/images/band_02.JPG") %>">/>
                <p class="sp-caption">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </div>
            
            <!-- Slide 3 -->
            <div class="sp-slide">
                <h3 class="sp-layer">Lorem ipsum dolor sit amet</h3>
                <p class="sp-layer">consectetur adipisicing elit</p>
                <img class="sp-image" src="<%= static_path(@conn, "/images/band_03.JPG") %>">/>
                <p class="sp-caption">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </div>
        </div>
      </div>

      <h3>Skrollr Effects</h3>
      <div id="skrollr-foo">
       <div id="foo" data-1000="background-color:rgb(0,0,255);" data-1500="background-color:rgb(255,0,0);">WOOOT</div>    
      </div>

    </div> <!-- /container -->
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
    <script type="text/javascript">
      jQuery(document).ready(function($) {

          // slider-pro initialization
          $('#my-slider').sliderPro({
            width: '100%',
            height: 500,
            responsive: true,
            arrows: true,
            buttons: false,
            waitForLayers: true,
            fade: true,
            autoplay: true,
            autoScaleLayers: false
          });

          // skrollr initialization      
          window.skrollr = require('skrollr');
          skrollr.init();

          // sticky-header initialization      
          window.sticky = require('sticky-header');
          var nav = document.getElementById('sticky-nav');
          sticky(nav);
      });
    </script> 
  </body>
</html>
